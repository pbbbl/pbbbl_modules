{
    "name": "@pbbbl/aes",
    "author": "Tyler Grow",
    "module": "dist/aes.esm.js",
    "version": "0.0.2",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "on-release": "tsdx build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "size-limit": [
        {
            "path": "dist/aes.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/aes.esm.js",
            "limit": "10 KB"
        }
    ],
    "dependencies": {
        "aes-256-gcm": "^1.0.3",
        "crypto-browserify": "^3.12.0",
        "fast-safe-stringify": "^2.1.1",
        "randombytes": "^2.1.0",
        "serialize-javascript": "^6.0.0"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.8",
        "@types/serialize-javascript": "^5.0.2",
        "husky": "^7.0.4",
        "size-limit": "^7.0.8",
        "tsdx": "^0.14.1",
        "tslib": "^2.4.0",
        "typescript": "^4.6.4"
    }
}
