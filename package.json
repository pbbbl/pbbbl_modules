{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "gitpush": "lerna bootstrap && lerna link && git add . && git commit -m \"prepublish\" && git push",
    "ver": "lerna version --yes --conventional-commits",
    "on-release": "echo $RELEASE_TYPE",
    "prerelease": "lerna bootstrap && lerna link && git add . && git commit -m \"prepublish\" && git push",
    "release:patch": "lerna exec \"yarn publish --access public --patch\"",
    "release:minor": "lerna exec \"yarn publish --access public --minor\"",
    "release:major": "lerna exec \"yarn publish --access public --major\"",
    "release": "dotenv-run-script echo \"$PATCH\""
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "lerna": "^4.0.0"
  }
}
