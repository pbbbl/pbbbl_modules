{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "gitpush":"git add . && git commit -m \"prepublish\" && git push",
    "ver": "lerna bootstrap && yarn gitpush && lerna version --yes --skip-git --no-push",
    "release:patch": "yarn ver -- patch",
    "release:minor": "yarn ver -- minor",
    "release:major": "yarn ver -- major",
    "release": "yarn release:patch",
    "postrelease":"lerna exec \"npm publish --access public\""
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
