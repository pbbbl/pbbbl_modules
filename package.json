{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "gitpush": "lerna bootstrap && lerna link && git add . && git commit -m \"prepublish\" && git push",
    "ver": "lerna version --yes --conventional-commits",
    "on-release": "echo $RELEASE_TYPE",
    "prerelease": "lerna bootstrap && lerna link && git add . && git commit -m \"prepublish\" && git push",

    "release3": "cross-env RELEASE_TYPE='--patch' && echo $RELEASE_TYPE",
    "release": "cross-env GREET=\"Joe\" npm run childScript",
    "childScript":  "cross-env-shell \"echo Hello $GREET\"",
    "release2:patch": "lerna exec \"yarn publish --access public --patch\"",
"release2:minor": "lerna exec \"yarn publish --access public --minor\"",
"release2:major": "lerna exec \"yarn publish --access public --major\"",
    "release2": "cross-env-shell RELEASE_TYPE=patch "
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "lerna": "^4.0.0"
  }
}
