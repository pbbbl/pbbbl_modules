{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prerelease": "lerna bootstrap && lerna link && git add . && git commit -m \"pre-release\" && git push",
    "release": "lerna exec \"yarn publish --patch --access public --no-git-tag-version --no-commit-hooks\"",
    "release:patch": "lerna exec \"yarn publish --patch --access public --no-git-tag-version --no-commit-hooks\"",
    "release:minor": "lerna exec \"yarn publish --minor --access public --no-git-tag-version --no-commit-hooks\"",
    "release:major": "lerna exec \"yarn publish --major --access public --no-git-tag-version --no-commit-hooks\"",
    "postrelease": "git add . && git commit -m \"post-release\" && git push"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "dotenv-run-script": "^0.2.0",
    "lerna": "^4.0.0"
  }
}
